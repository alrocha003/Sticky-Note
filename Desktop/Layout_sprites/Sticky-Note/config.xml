<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Sticky Note</name>

    <preference name="SplashScreenDelay" value="5000" />

              <icon src="res/icons/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
              <icon src="res/icons/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
              <icon src="res/icons/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
              <icon src="res/icons/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
    
  <description>
      Sticky Note - Notas rapidas para o seu dia a dia.
  </description>

    <splash src="res/screens/android/screen-hdpi-portrait.png"/>
        <!-- you can use any density that exists in the Android project -->
<!--         <splash src="res/screens/android/screen-hdpi-portrait.png" platform="android" qualifier="land-hdpi"/>
        <splash src="res/screens/android/screen-ldpi-portrait.png" platform="android" qualifier="land-ldpi"/>
        <splash src="res/screens/android/screen-mdpi-portrait.png" platform="android" qualifier="land-mdpi"/>
        <splash src="res/screens/android/screen-xhdpi-portrait.png" platform="android" qualifier="land-xhdpi"/>
        <splash src="res/screens/android/screen-xxhdpi-portrait.png" platform="android" qualifier="port-xxhdpi"/>
        <splash src="res/screens/android/screen-xxxhdpi-portrait.png" platform="android" qualifier="port-xxxhdpi"/> -->
        
        <preference name="SplashScreen" value="screen"/>
        
        <plugin name="cordova-plugin-splashscreen" source="npm"/>
</widget>

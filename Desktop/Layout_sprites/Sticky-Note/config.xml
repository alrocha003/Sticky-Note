<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Sticky Note</name>

    <preference name="SplashScreenDelay" value="10000" />

              <icon src="res/icons/android/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
              <icon src="res/icons/android/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
              <icon src="res/icons/android/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
              <icon src="res/icons/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    
  <description>
      Sticky Note - Notas rapidas para o seu dia a dia.
  </description>

        <!-- you can use any density that exists in the Android project -->
        <gap:splash src="res/screens/android/screen-hdpi-portrait.png" gap:platform="android" gap:qualifier="land-hdpi"/>
        <gap:splash src="res/screens/android/screen-ldpi-portrait.png" gap:platform="android" gap:qualifier="land-ldpi"/>
        <gap:splash src="res/screens/android/screen-mdpi-portrait.png" gap:platform="android" gap:qualifier="land-mdpi"/>
        <gap:splash src="res/screens/android/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="land-xhdpi"/>
        <gap:splash src="res/screens/android/screen-xxhdpi-portrait.png" gap:platform="android" gap:qualifier="port-xxhdpi"/>
        <gap:splash src="res/screens/android/screen-xxxhdpi-portrait.png" gap:platform="android" gap:qualifier="port-xxxhdpi"/>

</widget>
